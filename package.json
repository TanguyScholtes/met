{
  "name": "met",
  "version": "0.1.0",
  "description": "A mastermind like game for BeCode",
  "author": "Anarion Lyanor Vlntngrgr",
  "license": "MIT",
  "scripts": {
    "lint": "npx eslint --fix --cache --ignore-pattern 'docs/*' src",
    "build:server": "npx babel src/server -s --out-dir bin/server",
    "work:server": "npx babel src/server -s --watch --verbose --out-dir bin/server",
    "build:client": "npx webpack --progress --profile --colors",
    "work:client": "npx webpack-dev-server --env=dev --hot --progress",
    "build": "npm run build:server && npm run build:client"
  },
  "lint-staged": {
    "*.js": [
      "npx eslint --fix --cache",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.2",
    "css-loader": "^2.1.0",
    "eslint": "^5.6.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.14.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {
    "express": "^4.16.4",
    "http": "0.0.0",
    "react": "^16.8.1",
    "react-cool-tabs": "^1.1.6",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "react-validation": "^3.0.7",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
